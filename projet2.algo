PROCEDURE comparaison(v1:ARRAY_OF INTEGER,v2:ARRAY_OF INTEGER,VAR somme:integer)
VAR
BEGIN
FOR i FROM 0 TO 9 STEP 1  DO
    somme=somme+(v1[i]*v2[i]);
END_FOR

END


