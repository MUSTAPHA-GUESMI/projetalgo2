FUNCTION dot_product(tab1,tab2:ARRAY_OF INTEGER) :INTEGER
VAR
    sum:INTEGER:=0;
    i:INTEGER;
BEGIN
    FOR i FROM 0 TO tab1.length-1 STEP 1  DO
      sum:=sum+tab1[i]*tab2[i] ; 
    END_FOR
    RETURN sum ;
END